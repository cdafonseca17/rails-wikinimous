<h1>All articles</h1>
<h3><%= link_to 'Add new article', articles_new_path %></h3>
<% @articles.each do |article| %>
<h2><%= link_to article.title.capitalize, article_path(article.id) %></h2>
<h5><%= link_to 'Edit', article_edit_path(article.id) %></h5>
<%= link_to 'Delete', article_path(article),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<p><%= article.content %></p>
<% end %>

